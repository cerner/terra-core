{
  "name": "terra-modal",
  "main": "lib/Modal.js",
  "version": "1.8.0",
  "description": "Modals are used to display content in a layer above the app. Modals consist of an overlay and container. Higher order components can provide the modal dialog with a header, body, and close button.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra-core.git"
  },
  "keywords": [
    "Cerner",
    "Terra",
    "terra-modal",
    "Modal",
    "UI"
  ],
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cerner/terra-core/issues"
  },
  "homepage": "https://github.com/cerner/terra-core#readme",
  "devDependencies": {
    "terra-icon": "^1.8.0",
    "terra-props-table": "^1.6.0"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "focus-trap-react": "^3.0.2",
    "prop-types": "^15.5.8",
    "react-portal": "^3.0.0",
    "terra-base": "^2.2.0"
  },
  "scripts": {
    "compile": "npm run compile:clean && npm run compile:build",
    "compile:clean": "$(cd ..; npm bin)/rimraf lib",
    "compile:build": "$(cd ..; npm bin)/babel src --out-dir lib --copy-files",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "$(cd ..; npm bin)/eslint --ext .js,.jsx . --ignore-path ../../.eslintignore",
    "lint:scss": "$(cd ..; npm bin)/stylelint src/**/*.scss",
    "props-table": "props-table ./src/Modal.jsx --out-dir ./docs/props-table",
    "test": "npm run test:jest && npm run test:nightwatch",
    "test:jest": "$(cd ..; npm bin)/jest --config ../../jestconfig.json",
    "test:nightwatch": "$(cd ..; npm bin)/nightwatch -c ../../nightwatch.conf.js"
  }
}
