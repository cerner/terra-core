{
  "name": "terra-mixins",
  "version": "0.1.0",
  "description": "Global mixins for use throughout the Terra ecosystem",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra-mixins.git"
  },
  "keywords": [
    "Cerner",
    "Terra",
    "terra-mixins",
    "UI"
  ],
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cerner/terra-mixins/issues"
  },
  "homepage": "https://github.com/cerner/terra-mixins#readme",
  "scripts": {
    "lint": "npm run lint-js && npm run lint-scss",
    "lint-js": "eslint .",
    "lint-scss": "stylelint src/**/*.scss",
    "release:patch": "npm version patch -m \"Released version %s\" && npm publish && git push --follow-tags",
    "release:minor": "npm version minor -m \"Released version %s\" && npm publish && git push --follow-tags",
    "release:major": "npm version major -m \"Released version %s\" && npm publish && git push --follow-tags",
    "start": "npm run lint && webpack-dev-server --hot --inline --progress --colors --host 0.0.0.0"
  },
  "devDependencies": {
    "css-loader": "^0.23.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb-base": "^5.0.3",
    "eslint-plugin-import": "^1.14.0",
    "html-loader": "^0.4.4",
    "node-sass": "^3.7.0",
    "postcss-loader": "^0.10.1",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.0",
    "stylelint": "^7.1.0",
    "stylelint-config-sass-guidelines": "^1.1.0",
    "terra-application": "^0.2.0",
    "terra-legacy-theme": ">= 0.1.0-rc.1  < 1.0.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.15.1"
  },
  "dependencies": {
    "autoprefixer": "^6.4.0",
    "extract-text-webpack-plugin": "^1.0.0",
    "html-webpack-plugin": "^2.22.0"
  }
}
