  },
  "homepage": "https://github.com/cerner/terra-core#readme",
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "memory-fs": "^0.4.1"
  },
  "bin": {
    "aggregate-translations": "./bin/aggregate-translations.js"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "commander": "^2.9.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.1",
