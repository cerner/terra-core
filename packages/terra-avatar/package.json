  },
  "homepage": "https://github.com/cerner/terra-core#readme",
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "terra-base": "^3.1.0",
    "terra-mixins": "^1.13.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.8",
    "terra-base": "^3.1.0",
