{
  "name": "terra-ui",
  "private": true,
  "version": "0.1.0",
  "description": "terra-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra-ui.git"
  },
  "keywords": [
    "Cerner",
    "Terra",
    "Terra UI",
    "terra-ui"
  ],
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cerner/terra-ui/issues"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/src/*.js",
      "packages/**/src/*.jsx"
    ],
    "setupFiles": [
      "./jestsetup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean:obsolete-snapshots": "npm test -- -u",
    "compile": "lerna run compile",
    "lint": "eslint . && eslint **/*.js, **/*.jsx  && lerna run lint",
    "lint:js": "lerna run lint:js",
    "lint:scss": "lerna run lint:scss",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "test": "lerna exec --concurrency 1 npm test",
    "start": "webpack-dev-server --hot --inline --display-error-details --progress --colors --host 0.0.0.0",
    "webpack": "webpack --config webpack.prod.config.js -p --progress --profile --json > build/stats.json",
    "deploy": "npm run webpack && gh-pages -d build",
    "prepush": "npm test && npm run compile && git diff --exit-code packages/*/lib/*"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "clean-webpack-plugin": "^0.1.15",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^1.0.0",
    "gh-pages": "^0.12.0",
    "github-markdown-css": "^2.4.1",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.22.0",
    "husky": "^0.13.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.36",
    "marked": "^0.3.6",
    "node-sass": "^4.3.0",
    "postcss-loader": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.4.2",
    "react-docgen": "^2.13.0",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.8.0",
    "stylelint-config-sass-guidelines": "^2.0.0",
    "terra-application": "^0.2.0",
    "terra-legacy-theme": "^0.1.0",
    "terra-react-svg-loader": "git://github.com/cerner/terra-react-svg-loader.git#master",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-stats-plugin": "^0.1.4"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "terra-mixins": "^1.0.0"
  }
}
